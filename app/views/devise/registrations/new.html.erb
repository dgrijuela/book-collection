<% provide(:title, 'Sign up') %>
<p id="notice"><%= notice %></p>
<div class="header-content">
    <div class="text left">
      <h2 class="light">Sign up</h2>
  </div>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :email %><br />
  <%= f.email_field :email, autofocus: true, class: "form_input" %></div>

  <div><%= f.label :password %> <% if @validatable %><i>(<%= @minimum_password_length %> characters minimum)</i><% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: "form_input" %></div>

  <div><%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "devise_input" %></div>

  <div><%= f.submit "Sign up", class: "form_button" %></div>
<% end %>

<%= render "devise/shared/links" %>
<br>
