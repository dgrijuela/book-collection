<section style="padding-top: 50px">
	<ul class="list-group">
    <%= @books.each_with_index do |book, index| %>
		<li id="list-<%= index %>">
			<figure>
        <%= link_to image_tag(book.cover.url(:grid)), book_path(book) %>
        <%= link_to book_path(book), class: "show-text" do %>
					<h3><%= book.title %></h3>
          <br>
					<% book.authors.each do |author| %>
            <b>Authors</b><br>
            <%= author.name %><br>
          <% end %>
          <br>
          <% book.attachments.each do |attachment| %>
            <b>Attachments</b><br>
            <%= attachment.file_file_name %><br>
          <% end %>
				</a>
        <% end %>
			</figure>
			<div class="name">
				<p>by <%= book.user.email[/[^@]+/] %></p>
			</div>
		</li>
    <% end %>
	<div class="button">
		<a href="#">Siguiente <i class="fa fa-angle-right"></i></a>
	</div>
</section>
</div>
</div><!--end main content-->

