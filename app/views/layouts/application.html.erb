<!DOCTYPE html>
<html>
<head>
  <title>Book Collection</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,300,700' rel='stylesheet' type='text/css'>
  <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">

</head>
<body>
  <header class="main-header">
		<div class="wrapper">
			<div class="logo left">
				<%= link_to "Book Collection", root_url %>
			</div>
			<div class="drop-bar">
				<i class="fa fa-bars"></i>
				<a href="#">Sign in</a>
			</div>
			<div class="normal-menu">
				<nav>
					<ul class="left">
						<li class="left"><b><%= link_to 'New Book', new_book_path %></b></li>
					</ul>
					<ul>
						<li>
							<form class="right">
								<i class="fa fa-search"></i>
								<input type="search-text" type="text" placeholder="Search">
							</form>
						</li>
						<li class="right"><a href="#">Sign in</a></li>
						<li class="right"><a href="#">Sign up</a></li>
					</ul>
				</nav>
			</div>
		</div><!--end of wrapper-->

		  <div class="dropdown-menu">
        <ul>
        	<li>
        		<form>
              <i class="fa fa-search"></i>
              <input type="search-text" type="text" placeholder="Search">
        		</form>
        	</li>
          <li><%= link_to 'New Book', new_book_path %></li>
      </ul>
    </div><!--end dropdown-menu-->
	</header>
  <div class="main-content">
			<div class="wrapper">

        <%= yield %>

      </div>
  </div>
  <footer>
		<div class="wrapper">
			<ul>
				<li class="heading">Book Collection</li>
				<li><a href="https://github.com/dgrijuela/book-collection"><i class="fa fa-github"></i> GitHub</a></li>
			</ul>
	  </div>
	</footer>
</body>

<%= debug(params) if Rails.env.development? %>

</body>
</html>
